@{
    Layout = null; // Assuming this is a standalone page, remove this if using a layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AT Engineers Attendance</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Custom styling */
        body {
            background-color: #F0F8FF; /* Light blue background */
        }

        .attendance-table {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            border-radius: 8px;
            padding: 20px;
            background-color: #B9D9EB; /* Mid-tone blue */
            color: #003B73; /* Darker blue for text */
            padding-bottom:20px;
        }

        th, td {
            text-align: center;
            vertical-align: middle;
            color: #003B73;
        }

        .table-body {
            background-color: white;
        }

        .table-responsive {
            width: 100%;
            border-radius: 10px;
        }

        .text-center {
            margin-top: 20px;
            margin-bottom: 0px;
        }

        .btn-custom {
            background-color: #0074B7; /* Darker blue for buttons */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
        }

        .btn-custom:hover {
            background-color: #003B73;
            color:white; /* Darkest blue on hover */
        }

        input {
            outline: none;
            width: 100px;
            border-width: 0px;
            color: white;
            background-color: #0074B7;
            text-align: center;
        }
        
        .btn-primary {
            margin: 10px 0 0 10px;
            background-color: #0047AB;
        }

        input::placeholder {
            color: white;
        }

        footer {
            margin-top: 20px; /* Space above the footer */
            padding: 10px; /* Padding for the footer */
            text-align: center; /* Center footer text */
            background-color: #F0F8FF; /* Light background color for footer */
        }

        @@media(max-width:500px) {
            .form-select {
                width: 90%;
            }
        }

        @@media(min-width:500px) {
            .table-responsive {
                width: 450px;
            }
        }

        #loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
        }
    </style>
</head>
<body>
    <div id="loading-overlay">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <a href="@Url.Action("AdminPage","Admin")" class="btn btn-primary mb-2 mr-2">Back</a>
                <div class="attendance-table p-4 shadow">
                    <h3 style="text-transform:capitalize;" class="text-center text-uppercase mb-4">Defining Page</h3>
                    <div class="table-responsive">
                        <table style="margin:0px;" class="table table-hover">
                            <tbody class="table-body">
                                <!-- Example Row (You can loop through your data here using Razor) -->
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="section" class="col-sm-4 col-form-label">Section</label></td>
                                    <td style="width:150px;" class="select-container">
                                        <a href="@Url.Action("Sections", "Section")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="department" class="col-sm-4 col-form-label">Department</label></td>
                                    <td style="width:10px;" class="select-container">
                                        <a href="@Url.Action("Department", "Department")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="atengineer" class="col-sm-4 col-form-label">ATEngineers</label></td>
                                    <td style="width:10px;" class="select-container">
                                        <a href="@Url.Action("ATEngineer", "ATEngineer")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="location" class="col-sm-4 col-form-label">Locations</label></td>
                                    <td style="width:10px;" class="select-container">
                                        <a href="@Url.Action("Locations", "Locations")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
    </footer>
    <!-- Bootstrap JS (Optional but needed if you want interactive elements like modals) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener("load", function () {
            document.getElementById("loading-overlay").style.display = "none";
        });
    </script>
</body>
</html>
