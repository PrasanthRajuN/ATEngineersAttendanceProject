@{
    ViewData["Title"] = "Admin Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap and Font Awesome for layout and icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        /* Background and layout */
        body {
            background-color: #BFD7ED;
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        /* Logout button styling */
        .logout-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background-color: #60A3D9;
            color: #ffffff;
            border: none;
            padding: 8px 16px;
            font-size: 16px;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .logout-btn:hover {
            background-color: #0074B7;
            color: #ffffff;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        /* Centered, card-style container */
        .admin-container {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            max-width: 500px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            text-align: center;
            margin: auto;
        }

        /* Header */
        h1 {
            color: #003B73;
            font-size: 26px;
            margin-bottom: 30px;
        }

        /* Button styling */
        .btn-custom {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #60A3D9;
            color: #ffffff;
            border: none;
            padding: 12px 20px;
            font-size: 18px;
            margin: 25px 0;
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-decoration: none;
        }

        .btn-custom:hover {
            background-color: #0074B7;
            color: #ffffff;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        /* Icon styling */
        .btn-custom i {
            margin-right: 10px;
            font-size: 20px;
        }

        /* Responsive adjustments */
        @@media (max-width: 500px) {
            .admin-container {
                padding: 30px 20px;
            }

            h1 {
                font-size: 22px;
            }
        }

        #loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
        }
    </style>
</head>
<body>
    <div id="loading-overlay">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <!-- Logout button at the top left corner -->
    <a href="@Url.Action("Index", "Login")" class="logout-btn">
        <i class="fas fa-sign-out-alt"></i> Logout
    </a>

    <!-- Main container for Admin page -->
    <div class="admin-container">
        <h1>Admin Dashboard</h1>

        <!-- Admin navigation buttons with icons and spacing -->
        <a href="@Url.Action("AllotWork", "Allotwork")" class="btn btn-custom">
            <i class="fas fa-tasks"></i> Allot Work
        </a>
        <a href="@Url.Action("AttendancePage", "AttendancePage")" class="btn btn-custom">
            <i class="fas fa-calendar-check"></i> Attendance
        </a>
        <a href="@Url.Action("DefiningPage", "DefiningData")" class="btn btn-custom">
            <i class="fas fa-cog"></i> Defining Data
        </a>
    </div>

    <!-- Bootstrap and Font Awesome JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script>
        window.addEventListener("load", function () {
            document.getElementById("loading-overlay").style.display = "none";
        });
    </script>
</body>
</html>
