@model IEnumerable<ATEngineersAttendanceProject.Models.Admin.AttendancePageModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AT Engineers Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #BFD7ED;
        }

        .attendance-table {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
            margin: 0 auto;
            max-width:90%;
        }

        th, td {
            text-align: center;
            vertical-align: middle;
            white-space: nowrap;
        }

        th {
            color: #003B73;
            background-color: #E7F3FE;
            padding: 10px;
        }

        .table-body {
            background-color: white;
        }

        .table-bordered {
            border: 2px solid #60A3D9;
        }

        .table-light {
            background-color: #E7F3FE;
            color: #003B73;
        }

        .btn-primary {
            background-color: #0074B7;
            border-color: #0074B7;
            margin-bottom: 15px;
        }

        .btn-primary:hover {
            background-color: #003B73;
            border-color: #003B73;
        }

        .btn-custom {
            background-color: #0074B7;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
        }

        .btn-custom:hover {
            background-color: #003B7a;
            color: white;
        }

        h3 {
            color: #003B73;
        }

        .backbutton {
            margin-left: 10px;
            margin-top: 10px;
        }

        #loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
        }

        /* Responsive design for smaller screens */
        @@media (max-width: 1200px) {
            .table-responsive {
                overflow-x: auto;
            }
        }

        @@media (max-width: 576px) {
            .table-responsive table,
            .table-responsive thead,
            .table-responsive tbody,
            .table-responsive th,
            .table-responsive td,
            .table-responsive tr {
                display: block;
                width: 100%;
            }

            .table-responsive tr {
                margin-bottom: 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
                padding: 10px;
            }

            .table-responsive th {
                display: none;
            }

            .table-responsive td {
                text-align: left;
                padding-left: 50%;
                position: relative;
            }

            .table-responsive td::before {
                content: attr(data-label);
                position: absolute;
                left: 15px;
                font-weight: bold;
                color: #003B73;
            }
        }
    </style>
</head>
<body>
    <div id="loading-overlay">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <div class="container-fluid mt-5">
        <div class="row justify-content-center">
            <div class="col-12">
                <a href="@Url.Action("AdminPage","Admin")" class="btn btn-primary mb-2 mr-2 backbutton">Back</a>

                <div class="attendance-table p-4 shadow">
                    <h3 class="text-center text-uppercase mb-4">Allotted Work</h3>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>WorkId</th>
                                    <th>EngineerId</th>
                                    <th>AT Engineer</th>
                                    <th>Section</th>
                                    <th>Department</th>
                                    <th>District</th>
                                    <th>Mandal</th>
                                    <th>Village</th>
                                    <th>Location</th>
                                    <th>PO No</th>
                                    <th>PO Code</th>
                                    <th>PO Date</th>
                                    <th>PO Copy</th>
                                </tr>
                            </thead>
                            <tbody class="table-body">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var sec in Model)
                                    {
                                        <tr>
                                            <td data-label="WorkId">@sec.WorkId</td>
                                            <td data-label="EngineerId">@sec.EngineerId</td>
                                            <td data-label="AT Engineer">@sec.Name</td>
                                            <td data-label="Section">@sec.Section</td>
                                            <td data-label="Department">@sec.Department</td>
                                            <td data-label="District">@sec.District</td>
                                            <td data-label="Mandal">@sec.Mandal</td>
                                            <td data-label="Village">@sec.Village</td>
                                            <td data-label="Location">@sec.Location</td>
                                            <td data-label="PO No">@sec.PONo</td>
                                            <td data-label="PO Code">@sec.POCode</td>
                                            <td data-label="PO Date">@sec.PODate</td>
                                            <td data-label="PO Copy">
                                                <a href="@Url.Action("GetPOFile", "ATEngineersAttendancePage", new { id = sec.WorkId })" target="_blank" class="btn btn-link">Show file</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center">
                        <a href="@Url.Action("ATEngineersAttendancePage", "ATEngineersAttendancePage")" class="btn btn-custom mt-3">ATEngineers Attendance</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener("load", function () {
            document.getElementById("loading-overlay").style.display = "none";
        });
    </script>
</body>
</html>