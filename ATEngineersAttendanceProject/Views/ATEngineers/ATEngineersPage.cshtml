@{
    ViewData["Title"] = "ATEngineer Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Add Bootstrap for styling and Font Awesome for icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        /* Reset margin and padding */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Background color and center alignment */
        body {
            background-color: #BFD7ED;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            height: 100vh;
            justify-content: center;
            position: relative;
            padding: 20px; /* Added padding for smaller screens */
        }

        .main-container {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            max-width: 500px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            text-align: center;
            margin: auto;
            margin-bottom: 25px;
        }

        /* Header */
        h1 {
            color: #003B73;
            font-size: 26px;
            margin-bottom: 30px;
        }

        /* Button styling */
        .btn-custom {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #60A3D9;
            color: #ffffff;
            border: none;
            padding: 12px 20px;
            font-size: 18px;
            margin: 15px 0;
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-decoration: none;
        }

        .btn-custom:hover {
            background-color: #0074B7;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .btn-custom i {
            margin-right: 10px;
            font-size: 20px;
        }

        /* Loading overlay */
        #loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
        }

        /* Footer buttons styling */
        .footer-buttons {
            display: flex;
            justify-content: center; /* Center buttons */
            padding: 10px 20px;
            margin-top: auto; /* Push to bottom */
            max-width: 500px; /* Match the main container's max-width */
            margin-left: auto; /* Center horizontally */
            margin-right: auto; /* Center horizontally */
            width: 100%; /* Full width for the footer buttons */
        }

        .btn-back, .btn-change-password {
            background-color: #003B73;
            color: #ffffff;
            border: none;
            padding: 10px 15px;
            font-size: 16px;
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%; /* Full width for buttons */
            margin: 0 5px; /* Space between buttons */
        }

        .btn-back:hover, .btn-change-password:hover {
            background-color: #0074B7;
        }

        .btn-back i, .btn-change-password i {
            margin-right: 8px;
            font-size: 18px;
        }

        /* Responsive adjustments */
        @@media (max-width: 576px) {
            .main-container {
                padding: 20px;
                width: 100%; /* Full width on smaller screens */
                max-width: none; /* Remove max-width for smaller screens */
            }

 h1 {
                font-size: 22px; /* Smaller heading size */
            }

            .btn-custom {
                font-size: 16px; /* Adjust button font size */
                padding: 10px; /* Smaller padding for buttons */
            }

            .footer-buttons {
                flex-direction: column; /* Stack buttons vertically on smaller screens */
                padding: 10px; /* Adjust padding for smaller screens */
                max-width: none; /* Remove max-width for smaller screens */
            }

            .btn-back, .btn-change-password {
                margin-bottom: 10px; /* Add space between buttons on smaller screens */
                width: 100%; /* Full width on smaller screens */
            }
        }
    </style>
</head>
<body>
    <div id="loading-overlay">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- Centered main container -->
    <div class="main-container">
        <!-- Heading -->
        <h1>ATEngineer Page</h1>

        <!-- Buttons as navigation options -->
        <a href="@Url.Action("ShowWork", "ShowWork")" class="btn btn-custom">
            <i class="fas fa-clipboard-list"></i> Show Work
        </a>
        <a href="@Url.Action("Records", "Records")" class="btn btn-custom">
            <i class="fas fa-file-alt"></i> Records
        </a>
    </div>

    <!-- Footer with Logout and Change Password buttons -->
    <div class="footer-buttons">
        <a href="@Url.Action("Index", "Login")" class="btn btn-back"><i class="fas fa-arrow-left"></i>Logout</a>
        <a href="@Url.Action("UpdatePassword", "UpdatePassword")" class="btn btn-change-password">Change Password</a>
    </div>

    <!-- Bootstrap and Font Awesome JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener("load", function () {
            document.getElementById("loading-overlay").style.display = "none";
        });
    </script>
</body>
</html>