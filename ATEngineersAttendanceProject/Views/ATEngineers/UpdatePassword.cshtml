@model ATEngineersAttendanceProject.Models.ATEngineers.ATEngineerModel
<!DOCTYPE html>
<html>
<head>
    <title>Update Password</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    
    <a href="@Url.Action("ATEngineersPage", "ATEngineers")" class="btn btn-primary mt-2"> Back</a>

    <div class="container mt-5">
        <h2>Update Password for @Model.Name</h2>
        <form asp-action="UpdatePassword" method="post">
            <div class="form-group">
                <label for="newPassword">New Password:</label>
                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
            </div>
            <button type="submit" class="btn btn-primary">Update Password</button>
        </form>
    </div>

    <!-- JavaScript to show popup if password is updated -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        // Check if there's a success message and show a popup
        @if (ViewBag.Message != null)
        {
            <text>
                    $(document).ready(function() {
                        alert('@ViewBag.Message');
                    });
            </text>
        }
    </script>
</body>
</html>
