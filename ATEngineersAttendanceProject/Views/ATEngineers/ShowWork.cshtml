@model IEnumerable<ATEngineersAttendanceProject.Models.Admin.AttendancePageModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AT Engineers Attendance</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Custom styling for better aesthetics */
        body {
            background-color: #EDE7F6;
        }

        .attendance-table {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            background-color: #e5d0ff;
        }

        th, td {
            text-align: center;
            vertical-align: middle;
        }

        .table-body {
            background-color: white;
        }

        /* Make rows look clickable */
        .clickable-row {
            cursor: pointer;
        }

            .clickable-row:hover {
                background-color: #d3c4ff;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <a href="@Url.Action("ATEngineersPage", "ATEngineers")" class="btn btn-primary mb-2 mr-2">Back</a>
                <div class="attendance-table p-4 shadow">
                    <h3 class="text-center text-uppercase mb-4" style="color: #6C3483;">Your Work</h3>
                    <div class="table-responsive" style="text-align:center">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <td>WorkId</td>
                                    <th>Name</th>
                                    <th>Section</th>
                                    <th>Department</th>
                                    <th>District</th>
                                    <th>Mandal</th>
                                    <th>Village</th>
                                    <th>Location</th>
                                    <th>PO No</th>
                                    <th>PO Code</th>
                                    <th>PO Date</th>
                                    <th>PO Copy</th>
                                    <th>Submit</th>
                                </tr>
                            </thead>
                            <tbody class="table-body">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var sec in Model)
                                    {
                                        <tr class="clickable-row" onclick="window.location.href='@Url.Action("UploadPage", "Upload", new { Attendanceid = sec.WorkId })'">
                                            <td>@sec.WorkId</td>
                                            <td>@sec.Name</td>
                                            <td>@sec.Section</td>
                                            <td>@sec.Department</td>
                                            <td>@sec.District</td>
                                            <td>@sec.Mandal</td>
                                            <td>@sec.Village</td>
                                            <td>@sec.Location</td>
                                            <td>@sec.PONo</td>
                                            <td>@sec.POCode</td>
                                            <td>@sec.PODate</td>
                                            <td>
                                                <a href="@Url.Action("GetPOFile", "ATEngineersAttendancePage", new { id = sec.WorkId })" target="_blank" class="btn btn-link" download onclick="event.stopPropagation()">Show file</a>
                                            </td>
                                            <td>
                                                <a style="background-color:#793ccf; color:white" href="@Url.Action("UploadPage", "Upload", new { Attendanceid = sec.WorkId })" class="btn btn-custom" onclick="event.stopPropagation()">Upload</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="12" class="text-center">No Work available.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
