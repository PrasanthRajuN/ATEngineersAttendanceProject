@model IEnumerable<ATEngineersAttendanceProject.Models.Admin.AttendancePageModel>
@{
    Layout = null; // Assuming this is a standalone page, remove this if using a layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AT Engineers Attendance</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Custom styling for better aesthetics */
        body {
            background-color: #EDE7F6;
        }

        .attendance-table {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            background-color: #e5d0ff;
        }

        th, td {
            text-align: center;
            vertical-align: middle;
        }

        .show-file {
            cursor: pointer;
            color: #5D6D7E;
            text-decoration: underline;
        }

        .table-body{
            background-color:white;
        }

        #loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
        }
    </style>
</head>
<body>
    <div id="loading-overlay">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <a href="@Url.Action("ATEngineersPage","Admin")" class="btn btn-primary mb-2 mr-2">Back</a>
                <div class="attendance-table p-4 shadow">
                    <h3 class="text-center text-uppercase mb-4" style="color: #6C3483;">Your Work</h3>
                    <div class="table-responsive " style="text-align:center">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Section</th>
                                    <th>Department</th>
                                    <th>Location</th>
                                    <th>Village</th>
                                    <th>Mandal</th>
                                    <th>District</th>
                                    <th>Submit</th>
                                </tr>
                            </thead>
                            <tbody class="table-body">
                                <!-- Example Row (You can loop through your data here using Razor) -->
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var sec in Model)
                                    {
                                            <tr>
                                                <td>@sec.Name</td>
                                                <td>@sec.Section</td>
                                                <td>@sec.Department</td>
                                                <td>@sec.Location</td>
                                                <td>@sec.Village</td>
                                                <td>@sec.Mandal</td>
                                                <td>@sec.District</td>
                                                <td><button class="btn btn-primary">Submit</button></td>
                                            </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Optional but needed if you want interactive elements like modals) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener("load", function () {
            document.getElementById("loading-overlay").style.display = "none";
        });
    </script>
</body>
</html>
